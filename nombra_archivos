x=$(ls -ltr /home/carlos/carpeta_prueba/folder | awk '{print $9}')   #guardamos en variable el out del comando (su columna 9)

num=1
for i in $x
do
mv /home/carlos/carpeta_prueba/folder/$i /home/carlos/carpeta_prueba/folder/$num
num=$((num+1))
done
